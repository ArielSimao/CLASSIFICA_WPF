        <Label x:Name="txtMediaRanking" Content="" HorizontalAlignment="Left" Margin="238,82,0,0" VerticalAlignment="Top" Width="43" RenderTransformOrigin="0.514,1.792"/>
        <Label Content="Comentario:" HorizontalAlignment="Left" Margin="354,12,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.217,-4.167"/>
        <Label x:Name="txtComentarioRanking" Content="" HorizontalAlignment="Left" Margin="359,41,0,0" VerticalAlignment="Top" Width="136" Height="84"/>
        <Image HorizontalAlignment="Left" Height="124" Margin="170,140,0,0" VerticalAlignment="Top" Width="334" Source="Imagens/podium.png" Stretch="Fill"/>
        <Label Content="Segundo" HorizontalAlignment="Left" Margin="198,162,0,0" VerticalAlignment="Top" FontSize="10" Width="74" Height="25" HorizontalContentAlignment="Center"/>
        <Label Content="Primeiro" HorizontalAlignment="Left" Margin="308,140,0,0" VerticalAlignment="Top" FontSize="10" Width="83" Height="23" HorizontalContentAlignment="Center"/>
        <Label Content="Terceiro" HorizontalAlignment="Left" Margin="405,177,0,0" VerticalAlignment="Top" FontSize="10" Width="82" Height="23" HorizontalContentAlignment="Center"/>
        <DataGrid x:Name="dataGridRanking" HorizontalAlignment="Left" Height="212" Margin="20,36,0,0" VerticalAlignment="Top" Width="145" RenderTransformOrigin="-0.23,-0.15" BorderThickness="1"/>

    </Grid>
</Window>
