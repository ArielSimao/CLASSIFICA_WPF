        <Label Content="Nome:" HorizontalAlignment="Left" Margin="193,36,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.133,-1.083"/>
        <Label Content="Sexo:" HorizontalAlignment="Left" Margin="193,60,0,0" VerticalAlignment="Top" RenderTransformOrigin="3.026,-0.167" Width="45"/>
        <Label Content="Data de Nasc.:" HorizontalAlignment="Left" Margin="195,111,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.217,-4.167"/>
        <Label x:Name="txtIdRanking" Content="" HorizontalAlignment="Left" Margin="217,12,0,0" VerticalAlignment="Top" Width="50"/>
        <Label x:Name="txtNomeRanking" Content="" HorizontalAlignment="Left" Margin="238,36,0,0" VerticalAlignment="Top" Width="116"/>
        <Label x:Name="txtSexoRanking" Content="" HorizontalAlignment="Left" Margin="238,60,0,0" VerticalAlignment="Top" Width="111"/>
        <Label x:Name="txtNascimentoRanking" Content="" HorizontalAlignment="Left" Margin="281,111,0,0" VerticalAlignment="Top" Width="73"/>
